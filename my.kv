<Button>:
    background_color: 	0.271, 0.482, 0.616
    background_disabled_normal: ''
    background_normal: ''
    canvas.before:
        Color:
            rgba: 0.745, 0.78, 0.933
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<MyGrid>:
    layStairs: layStairs
    btnRandomize: btnRandomize
    btnStart: btnStart
    btnBubble: btnBubble
    btnSelection: btnSelection
    btnInsertion: btnInsertion

    FloatLayout:
        size: root.width, root.height

        canvas:
            Color:
                rgb: 0.945, 0.98, 0.933

            Rectangle:
                size: self.size
            
            Color:
            	rgb: 0.114, 0.208, 0.341
            
            Line:
                width: 2
                rectangle: self.x+2, self.y+2, self.width*0.2-4, self.height-4

            Line:
                width: 2
                rectangle: self.width*0.2-2, self.height*0.1-4, self.width*0.8, self.height*0.9 +2

            Line:
                width: 2
                rectangle: self.width*0.2-2, self.height*0+2, self.width*0.8, self.height*0.1 -6

        
        BoxLayout:
            id: layStairs
            cols: 10
            size_hint: 0.7,0.8
            pos_hint: {"x":0.25 , "top":0.9}

            Button:
                size_hint: (0.1, 1/10)

            Button:
                size_hint: (0.1, 2/10)

            Button:
                size_hint: (0.1, 3/10)

            Button:
                size_hint: (0.1, 4/10)

            Button:
                size_hint: (0.1, 5/10)

            Button:
                size_hint: (0.1, 6/10)

            Button:
                size_hint: (0.1, 7/10)

            Button:
                size_hint: (0.1, 8/10)

            Button:
                size_hint: (0.1, 9/10)

            Button:
                size_hint: (0.1, 1)

        GridLayout:
            cols:2
            size_hint: 0.8, 0.1
            pos_hint: {"x":0.2 , "bottom":1}
            spacing: "12dp"
            padding: "12dp"

            Button:
                id: btnRandomize
                text: "Randomize"
                on_release: root.prsRandomize()
            
            Button:
                id: btnStart
                text: "Start"
                on_release: root.prsStart()
        
        GridLayout:
            cols:1
            size_hint: 0.2, 0.3
            pos_hint: {"x":0 , "top":1}
            spacing: "12dp"
            padding: "12dp"

            Button:
                id: btnBubble
                text: "Bubble Sort"
                disabled: True
                on_release: root.prsBubble()

            Button:
                id: btnSelection
                text: "Selection Sort"
                on_release: root.prsSelection()

            Button:
                id: btnInsertion
                text: "Insertion Sort"
                on_release: root.prsInsertion()



